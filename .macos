#!/usr/bin/env bash

# ~/.macos â€” https://mths.be/macos
# Modified by Jordy Koppen
# Run without downloading:
# curl https://raw.githubusercontent.com/jordykoppen/dotfiles/master/.macos | bash

# Ask for the administrator password upfront
sudo -v

# Keep-alive: update existing `sudo` time stamp until `.macos` has finished
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

###############################################################################
# Jordy's Customizations                                                       #
###############################################################################

echo "Hello $(whoami)! Let's get you set up."

echo "mkdir -p $(HOME)/code"
mkdir -p "$(HOME)/code"

# install homebrew https://brew.sh
echo "installing homebrew"
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

echo "cloning dotfiles"
mkdir ~/.config
git clone https://github.com/jordykoppen/dotfiles.git "${HOME}/dotfiles"
ln -s "${HOME}/dotfiles/.gitignore_global" "${HOME}/.gitignore_global"
ln -s "${HOME}/dotfiles/nvim" "${HOME}/.config/nvim"
ln -s "${HOME}/dotfiles/alacritty" "${HOME}/.config/alacritty"
ln -s "${HOME}/dotfiles/starship.toml" "${HOME}/.config/starship.toml"

source "${HOME}/dotfiles/setup/brew"
source "${HOME}/dotfiles/setup/node"
source "${HOME}/dotfiles/setup/nvim"
source "${HOME}/dotfiles/setup/macos"
source "${HOME}/dotfiles/setup/ssh-keygen"
source "${HOME}/dotfiles/setup/fish"

printf "TODO:\n\
Restart Terminal.app\n\
login to literally everything \n\
"
