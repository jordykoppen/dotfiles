[user]
	name = Jordy Koppen
	email = 24296556+jordykoppen@users.noreply.github.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    editor = nvim
	attributesfile = ~/.gitattributes
[apply]
    whitespace = nowarn
[mergetool]
    keepBackup = false
[difftool]
    prompt = true
[help]
    autocorrect = 1
[push]
    default = simple
[pull]
    rebase = false
[init]
  defaultBranch = main
[hub]
	protocol = ssh
[alias]
	diff-image = "!f() { cd -- \"${GIT_PREFIX:-.}\"; GIT_DIFF_IMAGE_ENABLED=1 git diff \"$@\"; }; f"
[diff "image"]
	command = ~/Downloads/git-diff-image/git_diff_image
