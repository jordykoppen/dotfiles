[user]
	name = Jordy Koppen
	email = 24296556+jordykoppen@users.noreply.github.com
[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[core]
    editor = nvim
	attributesfile = ~/.gitattributes
[apply]
    whitespace = nowarn
[mergetool]
    keepBackup = false
[difftool]
    prompt = true
[help]
    autocorrect = 1
[push]
    default = simple
	autoSetupRemote = true
[pull]
    rebase = false
[init]
  defaultBranch = main
[hub]
	protocol = ssh
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
