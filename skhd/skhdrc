# open terminal
hyper - return : open -n /Applications/Alacritty.app 

# Move focues across windows
hyper - x : yabai -m window --focus recent
hyper - h : yabai -m window --focus west
hyper - j : yabai -m window --focus south
hyper - k : yabai -m window --focus north
hyper - l : yabai -m window --focus east

# Move window across
meh - h : yabai -m window --warp west
meh - j : yabai -m window --warp south
meh - k : yabai -m window --warp noth
meh - l : yabai -m window --warp east

# restart all services
meh - r : brew services restart --all
# reload SKHD config 
hyper - r : skhd -r 

# set insertion point in focused container
hyper - left : yabai -m window --insert west
hyper - down : yabai -m window --insert south
hyper - up : yabai -m window --insert north
hyper - right : yabai -m window --insert east

# increase window size
hyper - a : yabai -m window --resize left:-20:0
hyper - s : yabai -m window --resize bottom:0:20
hyper - d : yabai -m window --resize top:0:-20
hyper - f : yabai -m window --resize right:20:0

# decrease window size
meh - a : yabai -m window --resize left:20:0
meh - s : yabai -m window --resize bottom:0:-20
meh - d : yabai -m window --resize top:0:20
meh - f : yabai -m window --resize right:-20:0
